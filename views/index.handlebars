<h1 class="text-center">Burger Time!</h1>

<h3 class="text-center">Order a Burger</h3>
<form class="create-form text-center">

  <div class="form-group ">
    <label>Burger Name:</label>
    <input type="text" id="burger-name" name="burger_name">
    <input type="hidden" name="devoured" value="0">
  </div>

  <button class="btn-warning" type="submit">Order Up!</button>
</form>
<br>

<div class="container">
  <div class="row">
    <div class="col-md-6 text-center">
      <h2>Burgers Awaiting Devouration:</h2>

      <ul class="list-unstyled">
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="eat btn-warning" data-id="{{id}}" data-devoured="1">Eat!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6 text-center">
      <h2>Burgers That Have Been Devoured:</h2>
      <ul class="list-unstyled">
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>